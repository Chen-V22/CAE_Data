    <script>
        var tag = 1;
        $(function () {
            $("#add").click(function () {
                $('#addTable')
                    .append(
                        '<div class="form-group" id="table'+ tag +'">' +
                        '<label class = "control-label col-md-2">相片' + tag + '</label>' +
                        '<div class="col-md-6">' +
                        '<input type="file" name="photo" />' +
                        '<br />' +
                        '<textarea class="text-danger" rows="3" cols="54" placeHolder="請輸入相片簡述" name="PhotoAnnotation"></textarea>' +
                        '</div>'+
                        '</div>');
                ++tag;
            });
            $("#del").click(function () {
                if (tag > 1) {
                    --tag;
                    $("[id=table" + tag + "]").remove();
                } else {
                    alert('只剩一筆，不用再刪了');
                }
            });
        });
    </script>

