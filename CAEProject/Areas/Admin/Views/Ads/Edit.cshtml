@model CAEProject.Models.Ad

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>廣告修改</h2>
<h4>廣告管理</h4>
@using (Html.BeginForm("Edit", "Ads", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    廣告資訊
                </header>
                <div class="form-horizontal">
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model=>model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.AdCategory, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EnumDropDownListFor(model => model.AdCategory, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AdCategory, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Applican, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Applican, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Applican, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AdStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EnumDropDownListFor(model => model.AdStatus, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AdStatus, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7 sandbox-container" style="display: flex">
                            @Html.EditorFor(model => model.SDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDate, "", new { @class = "text-danger" })
                            <p style="font-size: 20px;"> ~ </p>
                            @Html.EditorFor(model => model.EDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsTop, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            @Html.EnumDropDownListFor(model => model.IsTop, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IsTop, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                </div>
            </section>
        </div>

        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    圖片/附件
                </header>
                <div class="form-horizontal">
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            <input type="file" name="photo" />
                            <br/>
                            <img src="/upfile/images/@(Model.Photo)"/>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Annex, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            <input type="file" name="upfile" />
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.AddUser)
                    @Html.HiddenFor(model => model.DateTime)
                    <br />
                </div>
            </section>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-7">
            <button type="submit" class="btn btn-info"><span class="icon_cloud-upload_alt"></span> 送出</button>
            <a href="@Url.Action("Index", "Ads", new {area = "admin"})" style="margin: 0 0 0 5px" class="btn btn-danger"><span class="icon_house_alt"></span> 返回</a>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
