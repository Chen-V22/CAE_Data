                <li> DEFORM進階課程1wwwwww1222</li>
            </ul>
        </div>

    </div>
</section>

<!--最新消息-->
<section class="p-feature py-xl-12 ">
    <div class="container">
        <div class="row">
            <h3 class="p-feature__title ml-5 ">最新消息</h3>
        </div>
        <div class="row">
            <div class="newsWrap px-md-3">

                <ul class="tabs">
                    <li class="active" rel="tab1">
                        <div class="local">
                            <div class="text_wraper">
                                <i class="fas fa-bullhorn"></i>
                            </div>
                            <span class="tab_text">焦點新聞</span>
                        </div>
                    </li>
                    <li rel="tab2">
                        <div class="local">
                            <div class="text_wraper"><i class="far fa-comments"></i></div>研討會
                        </div>
                    </li>
                    <li rel="tab3">
                        <div class="local">
                            <div class="text_wraper"><i class="fas fa-newspaper"></i></div>電子報
                        </div>
                    </li>
                    <li rel="tab4">
                        <div class="local">
                            <div class="text_wraper"><i class="fas fa-atom"></i></div>技術新知
                        </div>
                    </li>

                </ul>

                <div class="tab_container ">
                    <div class="newsBox">

                        <h3 class="d_active tab_drawer_heading" rel="tab1"> <i class="fas fa-bullhorn pr-3"></i>焦點新聞</h3>
                        <div id="tab1" class="tab_content newsBox">
                            <ul>
                                @foreach (var news in newses)
                                {
                                    if (b == 0)
                                    {
                                        <li class="headline Hot">
                                            <div class="newsPic  imgLiquid imgLiquid_bgSize imgLiquid_ready" style="background-image: url(/upfile/images/s@(news.Photo));">
                                            </div>
                                            <div class="newsTxt">
                                                <a title="" href="#">
                                                    <span class="newsDate">
                                                        <u>@news.SDate.ToString("yyyy")</u><i>@news.SDate.ToString("M/dd")</i>
                                                    </span>
                                                    <div class="newsTitle">
                                                        <b class="department"></b>
                                                        <h2 id="h2edit">@news.Title</h2>
                                                    </div>
                                                    <p class="newsCon">
                                                        @Html.Raw(news.Count)
                                                    </p>
                                                </a>
                                            </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="oneNews">
                                            <a title="" href="#">
                                                <span class="newsDate">
                                                    <u>@news.SDate.ToString("yyyy")</u><i>@news.SDate.ToString("/M/dd")</i>
                                                </span>
                                                <h2 id="h2edit">
                                                    @news.Title
                                                </h2>
                                            </a>
                                        </li>
                                    }
                                    b++;
                                }
                            </ul>

                            <span> <a href="" title="焦點新聞" class="color_muted">更多 焦點新聞 </a></span>
                        </div>
                        <!-- #tab1 -->
                        <h3 class="tab_drawer_heading" rel="tab2"><i class="far fa-comments pr-3"></i>研討會</h3>
                        <div id="tab2" class="tab_content newsBox">
                            <ul>
                                @foreach (var sem in seminars)
                                {
                                    if (c == 0)
                                    {
                                        <li class="oneNews Hot">
                                            <a title="" href="">
                                                <span class="newsDate">
                                                    <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                                </span>
                                                <h2>@sem.Title</h2>
                                                <b class="department"></b>
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="oneNews">
                                            <a title="" href="">
                                                <span class="newsDate">
                                                    <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                                </span>
                                                <h2>@sem.Title</h2>
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>

                            <span> <a href="" title="研討會" class="color_primary">更多 研討會 </a></span>

                        </div>
                        <!-- #tab2 -->
                        <h3 class="tab_drawer_heading" rel="tab3"><i class="fas fa-newspaper pr-3"></i>電子報</h3>
                        <div id="tab3" class="tab_content newsBox">
                            <ul>
                                @foreach (var nl in newsletters)
                                {
                                    <li class="@(d==0?"oneNews Hot":"oneNews")">
                                        <a title="@nl.Title " href="#">
                                            <span class="newsDate">
                                                <u>@nl.Date.ToString("yyyy")</u><i>@nl.Date.ToString("/M/dd")</i>
                                            </span>
                                            <h2>@nl.Title</h2>
                                        </a>
                                    </li>
                                    d++;
                                }
                            </ul>

                            <span> <a href="" title="研討會" class="color_third-color">更多 電子報 </a></span>
                        </div>
                        <!-- #tab3 -->
                        <h3 class="tab_drawer_heading" rel="tab4"><i class="fas fa-atom pr-3"></i>技術新知</h3>
                        <div id="tab4" class="tab_content newsBox">
                            <ul>
                                @foreach (var Tk in technicalKnowles)
                                {
                                    if (e == 0)
                                    {
                                        <li class="oneNews Hot">
                                            <a title="@Tk.Title " href="#">
                                                <span class="newsDate">
                                                    <u>@Tk.DateTime.ToString("yyyyy")</u><i>@Tk.DateTime.ToString("/M/dd")</i>
                                                </span>
                                                <h2>@Tk.Title</h2>
                                                <b class="department"></b>
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="oneNews">
                                            <a title="@Tk.Title " href="#">
                                                <span class="newsDate">
                                                    <u>@Tk.DateTime.ToString("yyyyy")</u><i>@Tk.DateTime.ToString("/M/dd")</i>
                                                </span>
                                                <h2>@Tk.Title</h2>
                                            </a>
                                        </li>
                                    }
                                    e++;
                                }
                            </ul>

                            <span> <a href="" title="研討會" class="color_secondary">更多 技術新知 </a></span>
                        </div>
                        <!-- #tab4 -->

                    </div>
                </div>
            </div>
            <!-- .tab_container -->
        </div>
    </div>

</section>

<!--教育訓練-->
<section class="p-class  py-4 py-xl-10">
    <div class="container px-lg-0 px-md-4 py-7">
        <div class="row no-gutters">
            <div class="col-sm-12 col-xl-7 px-0 px-md-3">
                <h2 class="h-text-left  p-class__title h-text-ad_color">教育訓練</h2>
                <ul class=" tabs2">
                    <li class="active  active_2" rel="tabA">
                        <div class="local">
                            <span class="tab_text">@DateTime.Now.Month 月</span>
                        </div>
                    </li>
                    <li rel="tabB">
                        <div class="local"> @DateTime.Now.AddMonths(1).Month 月</div>
                    </li>
                    <li rel="tabC">
                        <div class="local">@DateTime.Now.AddMonths(2).Month 月</div>
                    </li>
                </ul>
                <div class=" tab_con p-tab__content">
                    <h3 class="d_active   drawer_heading" rel="tabA">@DateTime.Now.Month 月 訓練課程</h3><!--現在月份-->
                    <div id="tabA" class=" tab_contents">
                        <ul class="practice mt-n5">
                            @foreach (var tc in trainingCourses)
                            {
                                if (tc.SDate.Month == DateTime.Now.Month)
                                {
                                    <li class="@(f == 0 ? "oneNews Hot" : "oneNews")">
                                        <a title="@tc.Title" href="#">
                                            <span class="newsDate">
                                                <u>@tc.SDate.ToString("yyyy")</u><i>@tc.SDate.ToString("/M/dd")</i>
                                            </span>
                                            <i class="far fa-dot-circle"></i>
                                            <h2>@tc.Title</h2>
                                            <b class="m-card__button m-card__button_success">@(tc.SignUpEDate >= DateTime.Now ? "報名中" : "已結束")</b>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <!-- #tab1 -->
                    <h3 class=" drawer_heading" rel="tabB">@DateTime.Now.AddMonths(1).Month 月 訓練課程</h3><!--現在月份+1-->
                    <div id="tabB" class="tab_content tab_contents">
                        <ul class="practice">
                            @foreach (var tc in trainingCourses)
                            {
                                if (tc.SDate.Month == DateTime.Now.AddMonths(1).Month)
                                {
                                    <li class="@(f == 0 ? "oneNews Hot" : "oneNews")">
                                        <a title="@tc.Title" href="#">
                                            <span class="newsDate">
                                                <u>@tc.SDate.ToString("yyyy")</u><i>@tc.SDate.ToString("/M/dd")</i>
                                            </span>
                                            <i class="far fa-dot-circle"></i>
                                            <h2>@tc.Title</h2>
                                            <b class="m-card__button m-card__button_success">@(tc.SignUpEDate >= DateTime.Now ? "報名中" : "已結束")</b>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <!-- #tab2 -->
                    <h3 class=" drawer_heading" rel="tabC">@DateTime.Now.AddMonths(2).Month 月 訓練課程</h3><!--現在月份+2-->
                    <div id="tabC" class="tab_content tab_contents">
                        <ul class="practice">
                            @foreach (var tc in trainingCourses)
                            {
                                if (tc.SDate.Month == DateTime.Now.AddMonths(2).Month)
                                {
                                    <li class="@(f == 0 ? "oneNews Hot" : "oneNews")">
                                        <a title="@tc.Title" href="#">
                                            <span class="newsDate">
                                                <u>@tc.SDate.ToString("yyyy")</u><i>@tc.SDate.ToString("/M/dd")</i>
                                            </span>
                                            <i class="far fa-dot-circle"></i>
                                            <h2>@tc.Title</h2>
                                            <b class="m-card__button m-card__button_success">@(tc.SignUpEDate >= DateTime.Now ? "報名中" : "已結束")</b>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <!-- .tab_container -->
                <h2 class="h-text-left   p-service__title h-text-service_color">試作服務</h2>
                <div class="p-service__content ">
                    <div class="p-service__img">
                        <img src="./img/sync_files.svg" alt="" class="e-img">
                    </div>
                    <div class="p-service__box">
                        <ul class="">
                            <li>聯絡人：陳尹銜 </li>
                            <li> 電話：07-3517161#6315</li>
                            <li>
                                E-mail：sid@mail.mirdc.org.tw
                            </li>
                        </ul>
                        <div class="e-btn e-btn_btn-color e-btn_w_lg mt-1">
                            服務能量表下載
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-sm-12 col-xl-4 mx-auto mt-n1 px-md-3">
                <h2 class="h-text-left  p-class__title mt-md-2 mb-7  h-text-news_color">廣告專區</h2>
                <section class="p-servise mt-6 mt-md-0">
                    <div class="container">
                        <div class="p-ad__content ">
                            @foreach (var ad in adTop.Where(x => x.AdCategory == AdCategory.小圖示廣告).OrderBy(x => Guid.NewGuid()).Take(3))
                            {
                                <div class="p-ad__img">
                                    <a title="@ad.Title" href="@ad.Url">
                                        <img src="/upfile/images/s@(ad.Photo)" class="e__img">
                                    </a>
                                </div>
                            }
                        </div>

                        <div class="p-class__content mb-7 flex-column">
                            @foreach (var ad in adTop.Where(x => x.AdCategory == AdCategory.文字型廣告).OrderBy(x => Guid.NewGuid()).Take(3))
                            {
                                <div class="p-class__txtAD font-smaller">
                                    <i class="fas fa-dot-circle"></i>@ad.Title
                                </div>
                            }
                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>
</section>

