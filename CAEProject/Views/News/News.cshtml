@using MvcPaging
@model IPagedList<CAEProject.Models.News>

@{
    ViewBag.Title = "Index";
    int a = 0, b = 0;
}
<section class=" bannerPic " style="background-image: url(/CAE-Master/img/bg001.jpeg); background-size: cover; background-position: center center; background-repeat: no-repeat;">

    <div class="container">
        <div class="col-md-12 h-text-center">
            <h1> 焦點新聞</h1>
        </div>
    </div>
</section>

<section class="main-content">
    <div class="container px-md-4">
        <div class="row">
            <div class="col-sm-12 col-xl-9">
                <div class="container">
                    <ul class="e-breadcrumb ml-0">
                        <li>首頁</li>
                        <li>公告服務</li>
                        <li>焦點新聞</li>
                    </ul>

                    <div class="toolbar ">
                        @using (Html.BeginForm("News", "News", FormMethod.Post))
                        {
                            <div style="display: flex">
                                <div>
                                    <select class="styled-select" name="date">
                                        <option value="">年份選擇</option>
                                        @for (int i = 2017; i <= DateTime.Now.Year; i++)
                                        {
                                            <option value="@i" name="date">@i 年</option>
                                        }
                                        <span class="fa fa-sort-desc"></span>
                                    </select>
                                </div>


                                <div class="search">
                                    <input type="text" class="searchTerm  searchTerm_news" placeholder="想找哪篇新聞?" name="selectInput">
                                    <button type="submit" class="searchButton searchTerm_news">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <input type="hidden" name="dateYear" id="dateYear" value="" />
                        }


                    </div>
                    <div class="clearfix">
                    </div>
                    <ul class="list" id="dateSelect">
                        @foreach (var news in Model)
                        {
                            <li class="element-item" style="display: list-item;">
                                <a href="@Url.Action("NewsList","News",new {id=news.Id,page=Request.QueryString["page"]})" title="@news.Title">
                                    <div class="news-image-list">
                                        <img src="/upfile/images/s@(news.Photo)" alt="" class="e-img">
                                    </div>
                                    <div class="news-info-list">
                                        <p class="date_list">
                                            @news.SDate.ToString("yyyy-MM-dd")
                                        </p>
                                        <p class="newsTilte">@news.Title</p>
                                        <p class="newsContent longString">
                                            @(news.Count.Length > 100 ? news.Count.Remove(101) + "..." : news.Count)
                                        </p>
                                    </div>
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- 頁數 -->

                    <div class="pager" style="margin: 28px 0 28px 0">
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                    </div>

                    @*<ul class=" e-pagination modal-1 my-3">
                            <li><a href="#" class="prev">&laquo</a></li>
                            <li><a href="#" class="active">1</a></li>
                            <li> <a href="#">2</a></li>
                            <li> <a href="#">3</a></li>
                            <li> <a href="#">4</a></li>
                            <li><a href="#" class="next">&raquo;</a></li>
                        </ul>*@
                </div>
            </div>
            <div class="col-sm-12 col-xl-3">

                <div class="e_news mt-4">
                    <h3> <i class="fas fa-bullhorn"></i> 熱門研討會</h3>

                    <ul class="items_news items_news_muted">
                        @foreach (var sem in ViewBag.SeminarsNews)
                        {
                            if (a == 0)
                            {
                                <li class="oneNews Hot">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                        <b class="department"></b>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="oneNews">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>
                <div class="e_news">
                    <h3> <i class="fas fa-chalkboard-teacher"></i>熱門課程</h3>
                    <ul class="items_news items_news_muted">
                        @foreach (var sem in ViewBag.TrainingCourseNews)
                        {
                            if (b == 0)
                            {
                                <li class="oneNews Hot">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                        <b class="department"></b>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="oneNews">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>

                <div class="e_news">
                    <h3> <i class="fas fa-newspaper"></i> 廣告專區</h3>
                    <ul class="items_news items_news_ad_color">
                        <div class="p-ad__content ">
                            @foreach (var ad in ViewBag.AdNews)
                            {
                                <div class="p-ad__img">
                                    <a title="@ad.Title" href="@ad.Url">
                                        <img src="/upfile/images/s@(ad.Photo)" class="e__img">
                                    </a>
                                </div>
                            }
                        </div>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

