@using MvcPaging;
@model IPagedList<CAEProject.Models.Seminar>

@{
    ViewBag.Title = "Index";
    int a = 1, b = 0, c = 0, date = DateTime.Now.Year;
    date = date + 1 - 2017;
}

<section class=" bannerPic" style="background-image: url(/CAE-Master/img/bg001.jpeg); background-size: cover; background-position: center center; background-repeat: no-repeat;">

    <div class="container">
        <div class="col-md-12 h-text-center">

            <h1> 教育訓練</h1>

        </div>
    </div>
</section>

<section class="main-content">
    <div class="container px-md-4">
        <div class="row">
            <div class="col-md-12  col-xl-9">
                <div class="container">

                    <ul class="e-breadcrumb mb-0">
                        <li>首頁</li>
                        <li>研討會/課程</li>
                        <li>研討會</li>
                    </ul>
                    @using (Html.BeginForm("SeminarDetail","Seminars",FormMethod.Post))
                    {
                        <div class="toolbar mb-4">

                            <div>
                                @Html.DropDownList("year", Enumerable.Range(2017, date).Select(i => new SelectListItem { Value = i.ToString(), Text = i + "年" }), "-- 年份 --", new { @class = "styled-select" })
                            </div>

                            <div class="search">
                                <input type="text" class="searchTerm" placeholder="想找哪個研討會?" name="selectInput" >
                                <button type="submit" class="searchButton">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                        </div>
                    }
                    <div class="clearfix">
                    </div>
                    <div class="table-responsive-blocks">
                        <table class="table table-bordered  table_ad_color">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>活動日期</th>
                                    <th>分類</th>
                                    <th>主題</th>
                                    <th>瀏覽</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>

                                        <th @(a == 1 ? $"scope=\"row\"" : "")>@a</th>
                                        <td data-title="活動日期">@data.SDate.ToString("yyyy.MM.dd") ~ @data.EDate.ToString("yyyy.MM.dd")</td>
                                        <td data-title="分類">@data.SeminarStatus</td>
                                        <td data-title="主題"><a href="@Url.Action("sem_page", "Seminars", new {id = data.Id})"> @data.Title</a></td>
                                        <td data-title="瀏覽">@data.Clicks</td>
                                    </tr>
                                    a++;
                                }

                                @*<tr>
                                        <th>2</th>
                                        <td data-title="活動日期">22020.10.13~2020.10.13</td>
                                        <td data-title="分類">CAE中心</td>
                                        <td data-title="主題">2020臺日離岸風電智慧運維及創新技術線上暨</td>
                                        <td data-title="瀏覽">6</td>
                                    </tr>
                                    <tr>
                                        <th>3</th>
                                        <td data-title="活動日期">22020.10.13~2020.10.13</td>
                                        <td data-title="分類">CAE中心</td>
                                        <td data-title="主題">2020臺日離岸風電智慧運維及創新技術線上暨</td>

                                        <td data-title="瀏覽">36</td>
                                    </tr>*@
                            </tbody>
                        </table>
                    </div>
                    <!-- 頁數 -->
                    <div class="pager" style="margin: 28px 0 28px 0">
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                    </div>

                </div>
            </div>
            <div class="col-sm-12 col-xl-3">

                <div class="e_news mt-4">
                    <h3> <i class="fas fa-bullhorn"></i> 熱門研討會</h3>

                    <ul class="items_news items_news_muted">
                        @foreach (var sem in ViewBag.SeminarsNews)
                        {
                            if (a == 0)
                            {
                                <li class="oneNews Hot">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                        <b class="department"></b>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="oneNews">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>
                <div class="e_news">
                    <h3> <i class="fas fa-chalkboard-teacher"></i>熱門課程</h3>
                    <ul class="items_news items_news_muted">
                        @foreach (var sem in ViewBag.TrainingCourseNews)
                        {
                            if (b == 0)
                            {
                                <li class="oneNews Hot">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                        <b class="department"></b>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="oneNews">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>

                <div class="e_news">
                    <h3> <i class="fas fa-newspaper"></i> 廣告專區</h3>
                    <ul class="items_news items_news_ad_color">
                        <div class="p-ad__content ">
                            @foreach (var ad in ViewBag.AdNews)
                            {
                                <div class="p-ad__img">
                                    <a title="@ad.Title" href="@ad.Url">
                                        <img src="/upfile/images/s@(ad.Photo)" class="e__img">
                                    </a>
                                </div>
                            }
                        </div>

                    </ul>
                </div>
            </div>
        </div>

    </div>
</section>