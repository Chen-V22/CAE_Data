@model IEnumerable<CAEProject.Models.ActivityRecord>

<section class=" bannerPic " style="background-image: url(https://images.unsplash.com/photo-1534067783941-51c9c23ecefd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80); background-size: cover; background-position: center center; background-repeat: no-repeat;">

    <div class="container">
        <div class="col-md-12 h-text-center">
            <h1> 活動集錦</h1>
        </div>
    </div>
</section>
<article>
    <section class="main-content">
        <div class="container px-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="container">
                        <ul class="e-breadcrumb ml-0">
                            <li>首頁</li>
                            <li>公告服務</li>
                            <li>活動集錦</li>
                        </ul>

                        <div class="row">
                            @foreach (var data in Model)
                            {
                                <div class="col-xs-12  col-md-3 my-3">
                                    <a href="@Url.Action("PhotoDetail","ActivityRecords",new {id=data.Id})" target="_blank">
                                        <div class="m-card mx-auto">
                                            <img class="e__img h-bd-square" src="/upfile/images/s@(data.Photo)" alt="">
                                            <p>@data.Title (@data.ActivityPhotos.Count 張)</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        <!-- 頁數 -->

                    </div>
                </div>

            </div>
        </div>
    </section>
</article>