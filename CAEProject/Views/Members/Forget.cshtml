@model CAEProject.Models.Member

@{
    ViewBag.Title = "Details";
}

<section class=" bannerPic " style="background-image: url(/CAE-Master/img/bg001.jpeg); background-size: cover; background-position: center center; background-repeat: no-repeat;">

    <div class="container">
        <div class="col-md-12 h-text-center">
            <h1> 忘記密碼</h1>
        </div>
    </div>
</section>


<section class="main-content">
    <div class="container px-md-4">
        <div class="row">
            <div class="col-md-12">

                <div class=" m-ponent ">


                    <h3 class="h-text-center">請輸入您申請會員時填寫的資料， 核對無誤後，系統會將您的密碼寄至您的聯絡信箱：</h3>
                    @using (Html.BeginForm("Forget", "Members", FormMethod.Post))
                    {
                        <div class="col-12 col-md-6 col-xl-4 pt-5 mx-auto">

                            <div class="m-member-form h-shadow ">
                                <h4 class="m-member-form__title mb-1">忘記密碼？</h4>
                                <label class="m-member-form__label" for="email">註冊帳號*</label>
                                <div class="e-form-square mb-1"><i class="e-form-square__icon far fa-user"></i>
                                    <input class="e-form-square__input" type="email" name="account">
                                </div>
                                <label class="m-member-form__label" for="password">註冊郵件*</label>
                                <div class="e-form-square "><i class="e-form-square__icon fas fa-envelope"></i>
                                    <input class="e-form-square__input" type="password" name="email">
                                </div>


                                <div class="m-member-form__buttons justify-content-center mt-3">
                                    <button class="e-btn e-btn_primary  " type="submit">送 出     </button>
                                </div>
                                <div style="display: flex; justify-content: center;margin: 10px 0 0 0">
                                    <p class="h-s1 h-text-success">如為企業用戶，註冊email為貴公司聯絡窗口email</p>
                                </div>
                                
                            </div>
                        </div>

                    }


                </div>

            </div>
        </div>
    </div>
</section>