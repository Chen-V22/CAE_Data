@using CAEProject.Models
@using Microsoft.Ajax.Utilities
@{
    ViewBag.Title = "Home Page";
    IEnumerable<Ad> adTop = ViewBag.AdTop;
    IEnumerable<News> newses = ViewBag.Newses;
    IEnumerable<Seminar> seminars = ViewBag.Seminars;
    IEnumerable<Newsletter> newsletters = ViewBag.Newsletters;
    IEnumerable<TechnicalKnowledge> technicalKnowles = ViewBag.TechnicalKnowledge;
    IEnumerable<TrainingCourse> trainingCourses = ViewBag.TrainingCourse;
    IEnumerable<ActivityRecord> activityRecords = ViewBag.ActivityRecord;
    int a = 0, b = 0, c = 0, d = 0, e = 0, f = 0, g = 0;

}
<!--大圖廣告-->
<section class="m-hero">
    <div class="m-hero__bg">

    </div>
    <div class="m-slider ">
        <!-- <div class="m-slider__img"></div> -->
        <div class="blog-slider">
            <div class="blog-slider__wrp swiper-wrapper">
                @foreach (var top in adTop)
                {
                    if (top.AdCategory == AdCategory.Top廣告)
                    {
                        <div class="blog-slider__item swiper-slide">
                            <div class="blog-slider__img" style="background: url(/upfile/images/@(top.Photo)) @(a==0?"left bottom/cover no-repeat":"center/cover no-repeat");">
                            </div>
                        </div>
                        a++;
                    }
                }
            </div>
            <div class="blog-slider__pagination"></div>
        </div>
    </div>
</section>

<!--課程消息-->
<section class="m-Marquee">
    <div class="m-Marquee__bg ">
        <div class="m-Marquee__text">
            <i style="font-size: 1.8rem;" class="fa fa-bullhorn px-2"></i>
        </div>

        <div class="scroll">
            <ul>
                <li> FLOW-3D Cast重力與砂模鑄造訓練課程</li>
                <li> DEFORM進階課程</li>
