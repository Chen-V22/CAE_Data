@model CAEProject.Models.Seminar

@{
    ViewBag.Title = "Details";
    int a = 0, b = 0;
}

<section class=" bannerPic" style="background-image: url(/CAE-Master/img/bg001.jpeg); background-size: cover; background-position: center center; background-repeat: no-repeat;">

    <div class="container">
        <div class="col-md-12 h-text-center">


            <h1> 研討會 </h1>


        </div>
    </div>
</section>

<section class="main-content">
    <div class="container px-md-4">
        <div class="row">
            <div class="col-md-12  col-xl-9">
                <div class="container">
                    <ul class="e-breadcrumb mb-0">
                        <li>首頁</li>
                        <li>研討會/課程</li>
                        <li>研討會</li>
                        <li>@Model.Title</li>
                    </ul>

                    <div class="newsContent">
                        <h2 class="articleTitle">@Model.Title</h2>

                        <div class="title_line py-3">
                            <span class="semDate my-1">報名時間</span> @Model.SDate.ToString("yyyy-MM-dd") ~ @Model.EDate.ToString("yyyy-MM-dd")<br>
                            <span class="semDate">活動地點</span> @Model.Address<br>

                        </div>

                        <div class="textEditor">
                            <h3 class="txtTitle">【主辦單位】 <span> @Model.Organizer </span></h3>

                            <h3 class="txtTitle">【協辦/合辦單位】<span>@Model.Assisting </span></h3>

                            <h3 class="txtTitle">【主講人】<span> @Model.Lecturer</span></h3>

                            <h3 class="txtTitle">【詳細資料】</h3>
                            <p>
                                @Html.Raw(Model.Count)
                            </p>
                            <h3 class="txtTitle">【相關連結】 <span>   <a href="@Model.Url" target="_blank">@Model.Url</a> </span> </h3>
                            <!--end of sem_ctn_text-->
                        </div>
                        <hr />
                        <div class="h-text-right">
                            <a class="e-btn e-btn_ad_color " href="@Url.Action("SeminarDetail","Seminars")">返回列表</a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-sm-12 col-xl-3">

                <div class="e_news mt-4">
                    <h3> <i class="fas fa-bullhorn"></i> 熱門研討會</h3>

                    <ul class="items_news items_news_muted">
                        @foreach (var sem in ViewBag.SeminarsNews)
                        {
                            if (a == 0)
                            {
                                <li class="oneNews Hot">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                        <b class="department"></b>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="oneNews">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>
                <div class="e_news">
                    <h3> <i class="fas fa-chalkboard-teacher"></i>熱門課程</h3>
                    <ul class="items_news items_news_muted">
                        @foreach (var sem in ViewBag.TrainingCourseNews)
                        {
                            if (b == 0)
                            {
                                <li class="oneNews Hot">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                        <b class="department"></b>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="oneNews">
                                    <a title="" href="">
                                        <span class="newsDate">
                                            <u>@sem.SDate.ToString("yyyy")</u><i>@sem.SDate.ToString("/M/dd")</i>
                                        </span>
                                        <h2>@sem.Title</h2>
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>

                <div class="e_news">
                    <h3> <i class="fas fa-newspaper"></i> 廣告專區</h3>
                    <ul class="items_news items_news_ad_color">
                        <div class="p-ad__content ">
                            @foreach (var ad in ViewBag.AdNews)
                            {
                                <div class="p-ad__img">
                                    <a title="@ad.Title" href="@ad.Url">
                                        <img src="/upfile/images/s@(ad.Photo)" class="e__img">
                                    </a>
                                </div>
                            }
                        </div>

                    </ul>
                </div>
            </div>
        </div>
    </div>

</section>